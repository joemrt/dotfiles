!Should be processed with xrdb
!background transparency and color 
!fake transparency
!URxvt*transparent: true
!URxvt*shading: 50
!real transparency
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0faa/8800
URxvt.tintColor: #AAAAFF

!font color
URxvt*foreground: #22FFFF

!set font (default size has slightly too large distance)
URxvt*font:     xft:mono:size=20
URxvt.boldfont: xft:mono:size=20
URxvt.letterSpace: -1


! disable ugly scrollbar
URxvt.scrollBar: false


!scrolling options (taken from arch)
! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true


!perl stuff in .urxvt/ext
!activate vim-keybindings
URxvt.perl-ext-common: ...,keyboard-select,resize-font,selection-to-clipboard,...
URxvt.keysym.M-Escape: perl:keyboard-select:activate

!enable font resize
URxvt.keysym.C-plus:   resize-font:bigger
URxvt.keysym.C-minus:  resize-font:smaller

!icon
!URxvt.iconFile:    /home/martin/Pictures/Other/urxvt_icon.jpg

